<body class="text-center" style="display: flex; justify-content: center; align-items: center; height: 100vh">
    <main class="form-signin" style="width: 20rem">
        <form method="post" action="/signup">
            <img class="mb-4" src="https://getbootstrap.com/docs/5.0/assets/brand/bootstrap-logo.svg" alt="" width="72" height="57" />
            <h1 class="h3 mb-3 fw-normal">Please sign up</h1>

            <div class="form-floating">
                <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com" name="email" required />
                <label for="floatingInput">Email address</label>
            </div>
            <div class="form-floating">
                <input type="password" class="form-control" id="floatingPassword" placeholder="Password" name="password" required />
                <label for="floatingPassword">Password</label>
            </div>
            <div class="form-floating">
                <input type="password" class="form-control" id="floatingPassword" placeholder="Password" name="repPassword" required />
                <label for="floatingPassword">Repeat Password</label>
            </div>

            <button class="w-100 btn btn-lg btn-primary mt-5" type="submit">Sign up</button>
            <a href="/signin">Sign In</a>
            <p class="mt-5 mb-3 text-muted">Â© 2017-2021</p>
        </form>
    </main>
</body>
