<div class="modal fade" id="interviewModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add Interview</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action=<%= path %> method="post" id="addstudent">
                    <div class="mb-3">
                        <label for="recipient-name" class="col-form-label">Company:</label>
                        <input type="text" class="form-control" id="recipient-name" name="company" required/>
                    </div>
                    <div class="mb-3">
                        <label for="message-text" class="col-form-label">Collage:</label>
                        <input type="date" class="form-control" id="message-text" name="date" required></input>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary" form="addstudent">Add Interview</button>
            </div>
        </div>
    </div>
</div>
