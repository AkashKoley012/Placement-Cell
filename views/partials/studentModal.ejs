<div class="modal fade" id="studentModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add Student</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action=<%= path %> method="post" id="addstudent">
                    <div class="mb-3">
                        <label for="recipient-name" class="col-form-label">Name:</label>
                        <input type="text" class="form-control" id="recipient-name" name="name" required/>
                    </div>
                    <div class="mb-3">
                        <label for="message-text" class="col-form-label">Email:</label>
                        <input class="form-control" id="message-text" name="email" required></input>
                    </div>
                    <div class="mb-3">
                        <label for="message-text" class="col-form-label">Collage:</label>
                        <input class="form-control" id="message-text" name="collage" required></input>
                    </div>
                    <div class="mb-3">
                        <label for="message-text" class="col-form-label">Status:</label>
                        <select class="form-select" aria-label="Default select example" name="status">
                            <option value="Placed">Placed</option>
                            <option value="Not Placed">Not Placed</option>
                          </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-success" form="addstudent">Add Student</button>
            </div>
        </div>
    </div>
</div>
